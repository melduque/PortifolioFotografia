@model PortifolioFotografia.Models.Fotografia

@{
    ViewData["Title"] = "Nova Fotografia";
}

<h1>Nova Fotografia</h1>

<h4>Fotografia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NovaFotografia" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomeFotografo" class="control-label"></label>
                <input asp-for="nomeFotografo" class="form-control" />
                <span asp-validation-for="nomeFotografo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricaoFotografia" class="control-label"></label>
                <input asp-for="descricaoFotografia" class="form-control" />
                <span asp-validation-for="descricaoFotografia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="data" class="control-label"></label>
                <input type="date" asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Imagem da Fotografia</label>
                <input type="file" name="imagem" accept="image/*" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar</a>
</div>
